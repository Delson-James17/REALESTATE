<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="styles.css" />
    <title>Bootstap 5 Responsive Admin Dashboard</title>
</head>

<body>
  
    <div class="d-flex"id="wrapper">
        <!-- Sidebar -->
        <div class="background" id="sidebar-wrapper" style="width: 20%;">
            <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom">
                <a asp-controller="Properties" asp-action="Properties"><img class="propertyImage" src="~/lib/img/pjli-real-estate-low-resolution-logo-color-on-transparent-background.png" width="100%" style="padding:10px;"></a>
            </div>
            <div class="list-group list-group-flush my-3">
                <a class="list-group-item list-group-item-action bg-transparent second-text fw-bold " asp-controller="Properties" asp-action="Index">
                    <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                </a>
               
                <a asp-area="" asp-controller="Properties" asp-action="Create" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">
                    <i class="fa fa-building me-2"></i>Create Property
                </a>
                <a asp-area="" asp-controller="Appointments" asp-action="AppointmentList" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">
                    <i class="fas fa-clipboard-list"></i> Appointments List
                </a>
                <a asp-area="" asp-controller="Appointments" asp-action="AppointmentAdmin" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">
                    <i class="fas fa-calendar-alt me-2"></i>Appointment Callendar
                </a>
                <a asp-area="" asp-controller="Users" asp-action="GetAllUsers" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">
                    <i class="fas fa-users me-2"></i>User List
                </a>
                <a asp-area="" asp-controller="Account" asp-action="ProfileAdmin" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">
                    <i class="fas fa-user me-2"></i>Profile
                </a>
                <a href="#" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">
                    <i class="fas fa-comment-dots me-2"></i>Chat
                </a>
                <a href="#" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">
                    <i class="fas fa-map-marker-alt me-2"></i>Outlet
                </a>
                <a asp-area="" asp-controller="Account" asp-action="LogOut" class="list-group-item list-group-item-action bg-transparent text-danger fw-bold">
                    <i class="fas fa-power-off me-2"></i>Logout
                </a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div class="bodys" style="width:80%">
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                    <h2 class="fs-2 m-0">Admin Pannel</h2>
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle second-text fw-bold" href="# id=" navbarDropdown"
                               role="button" aria-expanded="false">
                                    <i class="fas fa-user me-2"></i>@User.Identity.Name
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
                <div class="container-fluid px-4">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- /#page-content-wrapper -->
    </>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        var el = document.getElementById("wrapper");
        var toggleButton = document.getElementById("menu-toggle");

        toggleButton.onclick = function () {
            el.classList.toggle("toggled");
        };
    </script>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
