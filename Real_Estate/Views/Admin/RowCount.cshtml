@model RowCountViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="body">
    <h1>
        Statistic
    </h1>

<div class="statistic">

<div class="card card-propcount">
    <div class="card-body">
        <h5 class="card-title">Total Properties</h5>
            <div class="mb-3 d-flex justify-content-center">
                <i class="fa fa-building me-2" id="icons"></i>
            <input type="text" class="form-control" id="propCount" name="propCount" value="@Model.PropertyCount" readonly>
        </div>
    </div>
</div>

<div class="card card-apptcount">
    <div class="card-body">
        <h5 class="card-title">Total Appointments</h5>
            <div class="mb-3 d-flex justify-content-center">
                <i class="fas fa-clipboard-list" id="icons"></i>
                <input type="text" class="form-control" id="apptCount" name="apptCount" value="@Model.AppointmentCount" readonly>
        </div>
    </div>
</div>

<div class="card card-usercount">
    <div class="card-body">
        <h5 class="card-title">Total Users</h5>
            <div class="mb-3 d-flex justify-content-center">
                <i class="fas fa-users me-2" id="icons"></i>
            <input type="text" class="form-control" id="userCount" name="userCount" value="@Model.UserCount" readonly>
        </div>
    </div>
</div>
</div>
</div>

<style>
    .body{
    margin:30px;
    }
    .card {
        border: none;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        margin-bottom: 30px;
    }
    #icons{
        margin: auto 0px;
        font-size:70px;
    }

    .statistic{
        display:flex;
        justify-content: space-around;
    }

    .card-body {
        padding: 20px;
        width: 300px;
    }

    .card-title {
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .card-propcount {
        background-color: #007bff;
        color: #fff;
        text-align:center;
        font-size:30px;
    }

    #propCount{
        background-color: #007bff;
        border:none;
        color: aliceblue;
        font-size: 70px;
        width: 70px;
        font-family: monospace;
        text-align: center;
        padding:0px;
    }

    .card-apptcount {
        background-color: #28a745;
        color: #fff;
        text-align: center;
        font-size: 30px;
    }

    #apptCount {
        background-color: #28a745;
        border: none;
        color: aliceblue;
        font-size: 70px;
        width: 70px;
        font-family: monospace;
        text-align: center;
        padding: 0px;
    }

    .card-usercount {
        background-color: #dc3545;
        color: #fff;
        text-align: center;
        font-size: 30px;
    }

    #userCount {
        background-color: #dc3545;
        border: none;
        color: aliceblue;
        font-size: 70px;
        width: 70px;
        font-family: monospace;
        text-align: center;
        padding: 0px;
    }

    .form-label {
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .form-control {
        font-size: 16px;
        padding: 12px 15px;
        border-radius: 5px;
        border: 1px solid #ccc;
        background-color: #f9f9f9;
        color: #333;
        box-shadow: none;
        transition: border-color 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .form-control:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

</style>



