@model Real_Estate.ViewModels.EditPropertyViewModel

@{
    ViewData["Title"] = "Edit";

}
<head>
    <!-- Design by foolishdeveloper.com -->
    <title>Glassmorphism login Form Tutorial in html css</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="C:\Users\COLLABERA\Desktop\Capstone01\Real_Estate\wwwroot\css\site.css">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">

</head>
<hr />
<body class="propertyBody">
<div class="row">
    <div class="col-md-4">
            <form class="forms" asp-action="Edit" method="post">
                <h1 class="whiteText">Edit Property</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                    <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="UrlImages" class="form-label"></label>
                <input asp-for="UrlImages" class="form-control" />
                <span asp-validation-for="UrlImages" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="Price" class="form-label">Sale Price</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="form-validation"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SaleOrRentModelId" class="control-label"></label>
                    <select asp-for="SaleOrRentModelId" class="form-control" asp-items="ViewBag.SaleOrRentModelId">
                        <option value="">Select an option</option>
                    </select>
                    <span asp-validation-for="SaleOrRentModelId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OwnerName" class="form-label">Rent Price</label>
                    <input asp-for="OwnerName" class="form-control" />
                    <span asp-validation-for="OwnerName" class="form-validation"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PropertyCategoryId" class="control-label"></label>
                    <select asp-for="PropertyCategoryId" class="form-control" asp-items="ViewBag.PropertyCategoryId">
                        <option value="">Select an option</option>
                    </select>
                    <span asp-validation-for="PropertyCategoryId" class="text-danger"></span>
                </div>
                <div class="buttonDiv">

                    <button type="submit" value="Save" class="blackText">Save</button>
                    <div>
                        <a asp-action="Index" class="whiteText">Back to List</a>
                    </div>
                </div>
        </form>
    </div>
</div>
</body>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
